<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <com.example.cs301hw1_fa20.Face
        android:id="@+id/Face"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/TopLayout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RED"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GREEN"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BLUE"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/MiddleLayout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/redSeekBar"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:max="255"
                android:min="0"
                android:progress="0"
                android:progressBackgroundTint="#FFFFFF"
                android:thumbTint="@android:color/holo_red_dark" />

            <SeekBar
                android:id="@+id/greenSeekBar"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:max="255"
                android:min="0"
                android:progress="0"
                android:progressBackgroundTint="#FFFFFF"
                android:thumbTint="@android:color/holo_green_dark" />

            <SeekBar
                android:id="@+id/blueSeekBar"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:max="255"
                android:min="0"
                android:progress="0"
                android:progressBackgroundTint="#FFFFFF"
                android:thumbTint="@android:color/holo_blue_dark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/BottomLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/randomFaceButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Random Face" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/BottomLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="125dp"
                android:layout_height="500dp"
                android:layout_centerInParent="false">

                <RadioButton
                    android:id="@+id/radio_Hair"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="checkedButton"
                    android:text="Hair" />

                <RadioButton
                    android:id="@+id/radio_Eyes"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:onClick="checkedButton"
                    android:text="Eyes" />

                <RadioButton
                    android:id="@+id/radio_Skin"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:onClick="checkedButton"
                    android:text="Skin" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>